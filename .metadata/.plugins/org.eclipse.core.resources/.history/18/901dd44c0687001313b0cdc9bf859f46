import java.util.ArrayList;
import java.util.Arrays;
import java.util.Map.Entry<String, Integer>;

public class MaxHeap
{
    private Entry<String, Integer>[] Heap;
    private int size;
    private int maxsize;
 
    private static final int FRONT = 1;
 
    public MaxHeap(int maxsize)
    {
        this.maxsize = maxsize;
        this.size = 0;
        Heap = new Entry<String, Integer>[this.maxsize + 1];
        Heap[0] = new Entry<String, Integer>("test");
    }
 
    private int parent(int pos)
    {
        return pos / 2;
    }
 
    private int leftChild(int pos)
    {
        return (2 * pos);
    }
 
    private int rightChild(int pos)
    {
        return (2 * pos) + 1;
    }
 
    private boolean isLeaf(int pos)
    {
        if (pos >=  (size / 2)  &&  pos <= size)
        {
            return true;
        }
        return false;
    }
 
    private void swap(int fpos,int spos)
    {
        Entry<String, Integer> tmp;
        tmp = Heap[fpos];
        Heap[fpos] = Heap[spos];
        Heap[spos] = tmp;
    }
 
    private void maxHeapify(int pos)
    {
        if (!isLeaf(pos))
        { 
            if ( Heap[pos].getValue() < Heap[leftChild(pos)].getValue()  || Heap[pos].getValue() < Heap[rightChild(pos)].getValue())
            {
                if (Heap[leftChild(pos)].getValue() > Heap[rightChild(pos)].getValue())
                {
                    swap(pos, leftChild(pos));
                    maxHeapify(leftChild(pos));
                }else
                {
                    swap(pos, rightChild(pos));
                    maxHeapify(rightChild(pos));
                }
            }
        }
    }
 
    public void insert(Entry<String, Integer> element)
    {
    	for(int i=0; i<size;i++)
    	{
    		if(Heap[i].getKey().equals(element.getKey()) && i<size)
    		{
    			Heap[i].increment();
    			return;
    		}
    	}
    	
        Heap[++size] = element;
        int current = size;
 
        while(Heap[current].getValue() > Heap[parent(current)].getValue())
        {
            swap(current,parent(current));
            current = parent(current);
        }
    }
 
    public void print()
    {
        for (int i = 1; i <= size / 2; i++ )
        {
            System.out.print(" PARENT : " + Heap[i].getValue() + Heap[i].getKey() + " LEFT CHILD : " + Heap[2*i].getValue() + Heap[2*i].getKey()
                  + " RIGHT CHILD :" + Heap[2 * i  + 1].getValue() + Heap[2 * i  + 1].getKey());
            System.out.println();
        }
    }
 
    public void maxHeap()
    {
        for (int pos = (size / 2); pos >= 1; pos--)
        {
            maxHeapify(pos);
        }
    }
 
    public Entry<String, Integer> remove()
    {
        Entry<String, Integer> popped = Heap[FRONT];
        Heap[FRONT] = Heap[size--]; 
        maxHeapify(FRONT);
        return popped;
    }
    
    public ArrayList<Entry<String, Integer>> top(Integer k)
    {
    	Entry<String, Integer> kHeap[] = Arrays.copyOfRange(Heap, 0, Math.pow(k, 2));
    }
    
    public static MaxHeap createHeap(ArrayList<String> input)
    {
    	MaxHeap output = new MaxHeap(input.size());
    	for(String s: input)
    	{
    		output.insert(new Entry<String, Integer>(s));
    		System.out.println(s);
    	}
    	return output;
    }
 
    public static void main(String...arg)
    {
        System.out.println("The Max Heap is ");
        MaxHeap maxHeap = new MaxHeap(15);
        maxHeap.insert(new Entry<String, Integer>("www.sean.com"));
        maxHeap.insert(new Entry<String, Integer>("www.vineel.com"));
        maxHeap.insert(new Entry<String, Integer>("www.bonnie.com"));
        maxHeap.insert(new Entry<String, Integer>("www.sean.com"));
        maxHeap.insert(new Entry<String, Integer>("www.bonnie.com"));
        maxHeap.insert(new Entry<String, Integer>("www.vineel.com"));
        maxHeap.insert(new Entry<String, Integer>("www.sean.com"));
        maxHeap.insert(new Entry<String, Integer>("www.vineel.com"));
        maxHeap.insert(new Entry<String, Integer>("www.bonnie.com"));
        maxHeap.insert(new Entry<String, Integer>("www.jen.com"));
 
        maxHeap.print();
        //System.out.println("The max val is " + maxHeap.remove());
    }
}